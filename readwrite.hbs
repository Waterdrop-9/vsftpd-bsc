#ifndef VSF_READWRITE_H
#define VSF_READWRITE_H

struct vsf_session;
struct mystr;

enum EVSFRWTarget
{
  kVSFRWControl = 1,
  kVSFRWData
};

unsafe int ftp_write_str(const struct vsf_session* p_sess,
                         const struct mystr* borrow p_str,
                         enum EVSFRWTarget target);
unsafe int ftp_read_data(struct vsf_session* p_sess, char* borrow p_buf,
                         unsigned int len);
unsafe int ftp_write_data(const struct vsf_session* p_sess,
                          const char* borrow p_buf,
                          unsigned int len);
unsafe int ftp_getline(struct vsf_session* p_sess, struct mystr* borrow p_str,
                       char* borrow p_buf);

#endif /* VSF_READWRITE_H */
