#include "filestr.hbs"
/* Get access to "private" functions */
#define VSFTP_STRING_HELPER
#include "str.hbs"
#include "sysutil.hbs"
#include "secbuf.hbs"
#include "utility.hbs"

unsafe int
str_fileread(struct mystr* p_str, const char* p_filename, unsigned int maxsize)
{
  if (p_str == 0 || p_filename == 0)
  {
    return -1;
  }
  safe int fd = -1;
  safe int retval = 0;
  safe filesize_t size = 0;
  char* owned p_sec_buf = (char* owned)(void*)0;
  char** borrow p_secbuf_borrow =
    (char** borrow) &p_sec_buf;
  struct vsf_sysutil_statbuf* p_stat = 0;
  /* In case we fail, make sure we return an empty string */
  str_empty(p_str);
  fd = vsf_sysutil_open_file(p_filename, kVSFSysUtilOpenReadOnly);
  if (vsf_sysutil_retval_is_error(fd))
  {
    return fd;
  }
  vsf_sysutil_fstat(fd, &p_stat);
  if (vsf_sysutil_statbuf_is_regfile(p_stat))
  {
    size = vsf_sysutil_statbuf_get_size(p_stat);
    if (size > maxsize)
    {
      size = maxsize;
    }
    vsf_secbuf_alloc(p_secbuf_borrow, (unsigned int) size);

    char* borrow p_sec_buf_borrow = (char* borrow) p_sec_buf;
    retval = vsf_sysutil_read_loop(fd, (void*) p_sec_buf_borrow,
                                   (unsigned int) size);
    if (vsf_sysutil_retval_is_error(retval))
    {
      goto free_out;
    }
    else if ((unsigned int) retval != size)
    {
      die("read size mismatch");
    }
    str_alloc_memchunk(p_str, (const char*) p_sec_buf_borrow,
                       (unsigned int) size);
  }
free_out:
  vsf_sysutil_free(p_stat);
  vsf_secbuf_free(p_secbuf_borrow);
  vsf_sysutil_close(fd);
  return retval;
}
